pipeline {
    agent any 

    tools {
        jdk 'jdk'
        maven 'maven'
    }    

    stages {
        stage("Git Checkout") {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/bhavanapatil004/blog_app.git'
            }
        }

        stage("Compile") {
            steps {
                sh "mvn clean compile"
            }
        }

        stage("Sonarqube Analysis") {
            steps {
                script {
                    withSonarQubeEnv(credentialsId: 'sonar-token') {
                        sh 'mvn sonar:sonar'
                    }
                }
            }
        }
        
        stage("Build") {
            steps {
                sh "mvn clean install"
            }
        }

        stage("OWASP Dependency Check") {
            steps {
                dependencyCheck additionalArguments: '--scan ./ --format HTML', odcInstallation: 'DP-Check'
                dependencyCheckPublisher pattern: '**/dependency-check-report.html'
            }
        }
        
        stage("Docker Build & Push") {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'Docker_cred', toolName: 'docker') {
                        sh "docker build -t blogapp ."
                        sh "docker tag blogapp bhavana0004/blogapp:v01"
                        sh "docker push bhavana0004/blogapp:01"
                    }
                }
            }
        }
        
        stage("TRIVY"){
            steps{
                sh "trivy image bhavana0004/blogapp:01"
            }
        }
        
        stage("Deploy Using Docker"){
            steps{
                sh " docker run -d --name -p 8082:8080 bhavana0004/blogapp:01 "
            }
        }        

    }  // End of stages
}  // End of pipeline
